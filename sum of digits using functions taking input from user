#include<stdio.h>
int raj(int);
int raj(int a)
{
    int total=0;
    while(a>0)
    {
        total+=a%10;
        a=a/10;
    }
    return total;
}
void main()
{
    int a;
    int sum=0;
    while(1)
    {
        printf("enter a number:");
        scanf("%d",&a);
        if(a==0)
         break;
        else
         sum=sum+raj(a);
    }
    printf("the sum is %d",sum);
}
